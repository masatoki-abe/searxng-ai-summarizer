{
    "manifest_version": 3,
    "name": "SearXNG AI Summarizer",
    "version": "1.0.0",
    "description": "SearXNGの検索結果をAIで要約します。",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*/search*",
        "*://*/*q=*"
    ],
    "action": {
        "default_popup": "popup/index.html",
        "default_title": "SearXNG AI Summarizer Settings",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "96": "icons/icon96.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/search*",
                "*://*/*q=*"
            ],
            "css": [
                "styles/content.css"
            ],
            "js": [
                "scripts/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "searxng-ai-summarizer@masatoki.com",
            "strict_min_version": "109.0"
        }
    }
}